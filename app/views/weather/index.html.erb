<div class="min-h-screen bg-gradient-to-br from-blue-400 via-blue-500 to-blue-600">
  <div class="container mx-auto px-4 py-12">
    <!-- Header -->
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold text-white mb-4">
        <i class="fas fa-cloud-sun text-6xl mr-4"></i>
        Weather Forecast
      </h1>
      <p class="text-xl text-blue-100">Get accurate weather information for any location</p>
    </div>

    <!-- Search Form -->
    <div class="max-w-2xl mx-auto">
      <div class="bg-white rounded-lg shadow-2xl p-8 mb-8">
        <%= form_with url: weather_forecast_path, method: :post, data: { turbo_frame: "forecast_results" }, class: "space-y-6" do |f| %>
          <div>
            <%= f.label :address, "Enter Address, City, or Zip Code", class: "block text-lg font-semibold text-gray-700 mb-2" %>
            <%= f.text_field :address, 
                placeholder: "e.g., New York, NY or 10001", 
                class: "w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent text-lg",
                autofocus: true,
                required: true %>
            <p class="mt-2 text-sm text-gray-500">
              You can enter a city name, full address, or zip code
            </p>
          </div>

          <div class="flex items-center">
            <%= f.check_box :include_forecast, 
                class: "w-4 h-4 text-blue-600 rounded focus:ring-blue-500",
                id: "include_forecast",
                checked: true %>
            <%= f.label :include_forecast, 
                "Include 5-day extended forecast", 
                class: "ml-2 text-gray-700 font-medium",
                for: "include_forecast" %>
          </div>

          <div>
            <%= f.submit "Get Weather", 
                class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 ease-in-out transform hover:scale-105 cursor-pointer text-lg shadow-lg",
                data: { turbo_submits_with: "Fetching weather..." } %>
          </div>
        <% end %>
      </div>

      <!-- Results Area -->
      <%= turbo_frame_tag "forecast_results", class: "block" do %>
        <div class="text-center text-white">
          <i class="fas fa-cloud-sun text-8xl mb-4 opacity-50"></i>
          <p class="text-xl">Enter a location above to get started</p>
        </div>
      <% end %>
    </div>

    <!-- Features Section -->
    <div class="max-w-4xl mx-auto mt-16 grid md:grid-cols-3 gap-8">
      <div class="bg-white bg-opacity-20 backdrop-blur-lg rounded-lg p-6 text-white text-center">
        <i class="fas fa-bolt text-4xl mb-3"></i>
        <h3 class="font-bold text-lg mb-2">Real-Time Data</h3>
        <p class="text-sm">Powered by OpenWeather API</p>
      </div>
      
      <div class="bg-white bg-opacity-20 backdrop-blur-lg rounded-lg p-6 text-white text-center">
        <i class="fas fa-clock text-4xl mb-3"></i>
        <h3 class="font-bold text-lg mb-2">Smart Caching</h3>
        <p class="text-sm">30-minute cache for faster results</p>
      </div>
      
      <div class="bg-white bg-opacity-20 backdrop-blur-lg rounded-lg p-6 text-white text-center">
        <i class="fas fa-chart-line text-4xl mb-3"></i>
        <h3 class="font-bold text-lg mb-2">Extended Forecast</h3>
        <p class="text-sm">5-day forecast available</p>
      </div>
    </div>
  </div>
</div>
